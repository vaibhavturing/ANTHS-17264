# Server Configuration  
PORT=3001
NODE_ENV=test
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:8080

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/healthcare-management-test
MONGO_OPTIONS=retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=test_secret_key_for_testing_only
JWT_EXPIRES_IN=1h
JWT_COOKIE_EXPIRES_IN=1

# Logging
LOG_LEVEL=error
LOG_TO_FILE=false

# Security
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email Configuration (test - typically disabled)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
EMAIL_FROM=test@healthcare-app.com

# Third-party APIs (mocked in tests)
PAYMENT_GATEWAY_API_KEY=test_payment_key
NOTIFICATION_SERVICE_KEY=test_notification_key