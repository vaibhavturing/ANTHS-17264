# .env.example

# Core
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/healthcare_management
MONGODB_DB_NAME=healthcare_management
MONGODB_POOL_SIZE=10
MONGODB_MAX_RETRIES=5
MONGODB_RETRY_INTERVAL=5000
MONGODB_HEALTH_CHECK_INTERVAL=30000

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev

# Redis (for production)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=

# Security Configuration
# Comma-separated list of allowed origins for CORS
CORS_WHITELIST=https://example.com,https://app.example.com

# Comma-separated list of allowed IP addresses for admin operations
ADMIN_IP_WHITELIST=127.0.0.1,192.168.1.1

# Comma-separated list of allowed IP addresses for sensitive operations
IP_WHITELIST=127.0.0.1,192.168.0.0/24

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security contact
SECURITY_CONTACT_EMAIL=security@example.com

# Feature flags
FEATURE_TELEMEDICINE=false
FEATURE_ANALYTICS=false
FEATURE_AUDIT_LOGGING=true