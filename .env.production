# Server Configuration
PORT=8080
NODE_ENV=production
API_URL=https://api.healthcare-app.com
CORS_ORIGIN=https://healthcare-app.com,https://admin.healthcare-app.com

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/healthcare-management-prod
MONGO_OPTIONS=retryWrites=true&w=majority&ssl=true

# JWT Configuration
JWT_SECRET=your_secure_long_production_jwt_secret
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=50

# Email Configuration (production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=contact@healthcare-app.com

# Third-party APIs
PAYMENT_GATEWAY_API_KEY=your_production_payment_key
NOTIFICATION_SERVICE_KEY=your_production_notification_key